{
  "info": {
    "name": "Şehitkamil Belediyesi API",
    "description": "Şehitkamil Belediyesi Süper Uygulama API Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.tokens) {",
                  "        pm.environment.set('access_token', jsonData.data.tokens.accessToken);",
                  "        pm.environment.set('refresh_token', jsonData.data.tokens.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.tokens) {",
                  "        pm.environment.set('access_token', jsonData.data.tokens.accessToken);",
                  "        pm.environment.set('refresh_token', jsonData.data.tokens.refreshToken);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me",
              "host": ["{{base_url}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"phone\": \"+905551234567\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/profile",
              "host": ["{{base_url}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Get Golbucks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/golbucks",
              "host": ["{{base_url}}"],
              "path": ["users", "golbucks"]
            }
          }
        },
        {
          "name": "Save FCM Token",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fcm_token\": \"your-fcm-token-here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/fcm-token",
              "host": ["{{base_url}}"],
              "path": ["users", "fcm-token"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events?limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/:id",
              "host": ["{{base_url}}"],
              "path": ["events", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "event-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Register for Event",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/events/:id/register",
              "host": ["{{base_url}}"],
              "path": ["events", ":id", "register"],
              "variable": [
                {
                  "key": "id",
                  "value": "event-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Rewards",
      "item": [
        {
          "name": "Get Rewards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rewards?limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["rewards"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            }
          }
        },
        {
          "name": "Redeem Reward",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rewards/:id/redeem",
              "host": ["{{base_url}}"],
              "path": ["rewards", ":id", "redeem"],
              "variable": [
                {
                  "key": "id",
                  "value": "reward-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get My Rewards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/rewards/my",
              "host": ["{{base_url}}"],
              "path": ["rewards", "my"]
            }
          }
        }
      ]
    }
  ]
}

